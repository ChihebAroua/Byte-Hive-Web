{% extends 'behijab.html.twig' %}

{% block title %}Vendre index{% endblock %}

{% block body %}
    <h1>Vendre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idequipement</th>
                <th>Prixequipement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendre in vendres %}
            <tr>
                <td>{{ vendre.idequipement }}</td>
                <td>{{ vendre.prixequipement }}</td>
                <td>
                    <a href="{{ path('app_vendre_show', {'idequipement': vendre.idequipement}) }}">show</a>
                    <a href="{{ path('app_vendre_edit', {'idequipement': vendre.idequipement}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vendre_new') }}">Create new</a>
{% endblock %}
