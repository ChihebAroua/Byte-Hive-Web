{% extends 'chiheb.html.twig' %}

{% block title %}Guide index{% endblock %}

{% block body %}
    <h1>Upcomingevents index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Event_number</th>
            <th>Event_name</th>
            <th>Location</th>
            <th>Date_camping</th>
            <th>Guide</th>
            <th>Id_guide</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for upcomingevent in upcomingevents %}
            <tr>
                <td>{{ upcomingevent.id }}</td>
                <td>{{ upcomingevent.eventNumber }}</td>
                <td>{{ upcomingevent.eventName }}</td>
                <td>{{ upcomingevent.location }}</td>
                <td>{{ upcomingevent.dateCamping ? upcomingevent.dateCamping|date('Y-m-d') : '' }}</td>
                <td>{{ upcomingevent.guide }}</td>
                <td>{{ upcomingevent.idGuide }}</td>
                <td>
                    <a href="{{ path('app_upcomingeventsapp_upcomingevents_showw', {'id': upcomingevent.id}) }}">show</a>
                    <a href="{{ path('app_upcomingeventsapp_upcomingevents_editt', {'id': upcomingevent.id}) }}">edit</a>

                    <a href="{{ path('app_upcomingeventsapp_upcomingevents_neww') }}">Create new</a>
                    <a href="{{ path('app_upcomingeventsapp_upcomingevents_list') }}">Imprimer PDF</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}