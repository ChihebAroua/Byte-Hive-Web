{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Nom Equipement</label>
        <div class="col-sm-10">
            {{ form_widget(form.nomequipement,{'att':{'class':'form-control'}}) }}
            {{ form_errors(form.nomequipement,{'att':{'class':'text-danger'}}) }}

        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Prix</label>
        <div class="col-sm-10">
            {{ form_widget(form.prixequipement,{'att':{'class':'form-control'}}) }}
            {{ form_errors(form.prixequipement,{'att':{'class':'text-danger'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            {{ form_widget(form.descriptionequipement,{'att':{'class':'form-control'}}) }}        </div>
        {{ form_errors(form.descriptionequipement,{'att':{'class':'text-danger'}}) }}

    </div>
    <div class="row mb-3">
        <label for="inputText" class="col-sm-2 col-form-label">Image</label>
        <div class="col-sm-10">
            {{ form_widget(form.imageequipement,{'att':{'class':'form-control'}}) }}
            {{ form_errors(form.imageequipement,{'att':{'class':'text-danger'}}) }}
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Disponibilite</label>
        <div class="col-sm-10">
            {{ form_widget(form.quantiteequipement,{'att':{'class':'form-control'}}) }}
            {{ form_errors(form.quantiteequipement,{'att':{'class':'text-danger'}}) }}
        </div>
    </div>
    </div>
    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Id Fournisseur</label>
        <div class="col-sm-10">
            {{ form_widget(form.idfournisseur,{'att':{'class':'form-control'}}) }}
            {{ form_errors(form.idfournisseur,{'att':{'class':'text-danger'}}) }}
        </div>
    </div>
    </div>


    <div class="row mb-3">
        <label for="inputNumber" class="col-sm-2 col-form-label">Rating</label>
        <div class="col-sm-10">
            <input type="range", {{ form_widget(form.rating,{'att':{'class':'form-control'}}) }} >
            {{ form_errors(form.rating,{'att':{'class':'text-danger'}}) }}
        </div>
    </div>
    </div>

    </fieldset>


    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Submit Button</label>
        <div class="col-sm-10">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}