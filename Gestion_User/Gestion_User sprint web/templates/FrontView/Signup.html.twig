{% extends 'base.html.twig' %}
{% block title %}Inscrivez-vous{% endblock %}
{% block body %}
<div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Your Account From Here</h5>

                    <!-- General Form Elements -->
                                        {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}

                        <label for="inputText" class="col-sm-4 col-form-label">name</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(form.name,{'attr':{'class':'text-danger'}}) }}



                    <label for="inputText" class="col-sm-4 col-form-label">lastname</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.lastname,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.lastname,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">email</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">password</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.password,{'attr':{'class':'text-danger'}}) }}
    
                    <label for="inputText" class="col-sm-4 col-form-label">role</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.role,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.role,{'attr':{'class':'text-danger'}}) }}
                     <label for="inputText" class="col-sm-4 col-form-label">profile picture</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.profilepicture,{'attr':{'class':'form-control'}}) }}

                    </div>
                    {{ form_errors(form.profilepicture,{'attr':{'class':'text-danger'}}) }}
    

                    


                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        
  <button type="submit" class="btn btn-success">Cr√©er</button>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>

{% endblock %}